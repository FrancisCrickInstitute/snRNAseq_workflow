resume = true

// default pipeline params
params.help = false
params.genome = "hg38"

// input params
params.input {
  dir = false
  sample_metadata_file = false
  summary_stats_file = false
}

// output params
params.output {
  dir = "$baseDir/output/"
}

// filtering params
params.filter {

  do = true
  
  sample_subset = false
  cell_subset = false
  
  remove_doublets = true
  n_nuclei_per_gene {
    max = 5
  }
  n_count_RNA {
    max = 100000
    min = 0
  }
  n_feature_RNA {
    max = 100000
    min = 0
  }
  percent_mito {
    max = 100
  }
}

// dimensionality reduction params
params.n_dims = false
params.vars_to_regress = ["percent_mito", "nCount_RNA"]