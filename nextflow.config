// default params
resume = true
//conda.enabled = true
process {
  executor = 'slurm'
}
params {
  help = false
  genome = "hg38"
  input {
    dir = false
    sample_metadata_file = false
  }
  output {
    dir = "$baseDir/output/"
  }
  filter {
    do_filtering = true
    sample_subset = false
    cell_subset = false
    doublets = true
    n_nuclei_per_gene {
      max = 5
    }
    nCount_RNA {
      max = 100000
      min = 0
    }
    nFeature_RNA {
      max = 100000
      min = 0
    }
    percent_mito {
      max = 100
      min = 0
    }
  }
  n_dims = false
  vars_to_regress = ["percent_mito", "nCount_RNA"]
  celltype_annotation {
    markers_file = false
    celltype_annotations_file = false
  }
  infercnv {
    reference_celltypes = false
    gene_order_file = false
  }
}